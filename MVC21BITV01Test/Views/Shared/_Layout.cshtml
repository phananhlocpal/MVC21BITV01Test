<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC21BITV01Test</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC21BITV01Test.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="icon" href="~/img/logo.png" type="image/x-icon" />
</head>
<body>
    <header class="kl-header">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="@Url.Content("~/img/logo.png")" alt="Logo" loading="lazy" style="width:70px">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="#">PRODUCT</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">PRICING</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">RESOURCES</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">BLOG</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">ABOUT</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a class="btn btn-outline-primary" href="#">SIGN IN</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            <!-- First Line: Icons -->
            <ul class="ftco-footer-social list-unstyled d-inline-flex">
                <li class="ftco-animate mx-2">
                    <a href="#">
                        <i class="bi bi-github"></i>
                    </a>
                </li>
                <li class="ftco-animate mx-2">
                    <a href="#">
                        <i class="bi bi-facebook"></i>
                    </a>
                </li>
                <li class="ftco-animate mx-2">
                    <a href="#">
                        <i class="bi bi-instagram"></i>
                    </a>
                </li>
            </ul>
            <!-- Second Line: Copyright Text -->
            <p class="mb-0">
                Copyright
                &copy;<script>document.write(new Date().getFullYear());</script> All
                rights reserved | This template is made with <i class="bi bi-heart-fill text-danger" aria-hidden="true"></i> by Hilo Team
            </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
